{
  "compilerOptions": {                        
    "target": "es6",
    "module": "commonjs",                           
    "outDir": "./dist",                             
    "rootDirs": ["./src", "./tests"],                             
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,                       
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ]
  },
  "exclude":[
    "./node_modules"
  ]
}
